bot.on('ready', () =>{
    console.log('This bot is online!');
})

bot.on('message', message=>{

    let args = message.content.substring(PREFIX.length).split(" ");

    switch(args[0]){
        case 'ping':
            message.channel.send(`🏓 Isn't it great weather for ping-ponging?`);
            break;
        case 'stockford':
            Bot.on('message' , function (message){
                if (message.content == '!stockford')
                var list = ['Hello kidlets! Is my mic working?','Alright! Chop chop! The bell has rung!','My little chemists! I have a little surprise for you! Smell this.','Dont be a slacker jacker, ya fuckin nigger']
                var msg = list[Math.floor(Math.random()*list.lenth)]
        break;  
    }
});
